{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!convex/_generated",
      "!**/*.generated.*",
      "!**/_generated"
    ],
    "experimentalScannerIgnores": [
      "convex/_generated/**",
      "**/*.generated.*",
      "**/_generated/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": {
          "level": "warn"
        }
      },
      "security": {
        "noDangerouslySetInnerHtml": {
          "level": "warn"
        }
      },
      "a11y": {
        "noSvgWithoutTitle": {
          "level": "warn"
        },
        "useValidAnchor": {
          "level": "warn"
        },
        "useSemanticElements": {
          "level": "warn"
        }
      },
      "correctness": {
        "noUnusedVariables": {
          "level": "warn"
        }
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
